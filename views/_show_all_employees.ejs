<link rel="stylesheet" href="/css/_show_all_employees.css">
<div class="main-parent">
    <h3>All Employees</h3>
    <div class="table-parent">

        <table class="styled-table">
            <thead>
                <tr>
                    <th>Profile</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Admin</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for(let employee of employees){%>
                    <tr>
                            <td><img src="<%=employee.avtar%>" alt="avtar"></td>
                            <td>
                                <%=employee.name%>
                            </td>
                            <td>
                                <%=employee.email%>
                            </td>
                            <td>
                                <%if(employee.isAdmin){%>
                                        Yes
                                    <%}else{%>
                                        No
            
                                        <%}%>
                            
                            </td>
                            <td>  
                                <a href="/user/admin/update-employee/<%=employee._id%>">  <button class="btn btn-primary">Update</button></a>
                              
                            </td>
                            <td>  
                                <a href="/user/admin/delete-employee/<%=employee._id%>"><button class="btn btn-danger">Delete</button></a>
                                
                            </td>
                    </tr>
                    
                    <%}%>
                <!-- and so on... -->
            </tbody>
        </table>
    </div>

</div>