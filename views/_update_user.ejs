<link rel="stylesheet" href="/css/_update_user.css">

<div class="parent">
    <div class="review-parent">
        <div class="card-header">
            <h3><%=selectedUser.name%>'s Profile</h3>
        </div>

        <div class="card">
            <form class="mx-1 mx-md-4" action="/user/admin/update-user/<%=selectedUser._id%>" method="post" enctype="multipart/form-data" >
  
                <div class="d-flex flex-row align-items-center mb-2  mt-2">
                  <div class="form-outline flex-fill mb-0">
                    <input type="text" name="name" value="<%=selectedUser.name%>"   id="form3Example1c" class="form-control" />
                    <label class="form-label"  for="form3Example1c">Name</label>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-2 ">
                  <div class="form-outline flex-fill mb-0">
                    <input type="file" name="avtar"  id="form3Example4cd" class="form-control" />
                    <label class="form-label" for="form3Example4cd">Profile picture</label>
                  </div>
                </div>


                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <button type="submit" class="btn btn-primary btn-lg">Update</button>
                </div>

              </form>
        </div>
       
    </div>
    <div class="review-parent">
        <div class="card-header">
            <h3>Reviews</h3>

        </div>
        <%for(let review of selectedUser.reviewFrom){%>
            <%if(review.content){%>
                <div class="card">
                    <p><span> From:</span>
                        <%=review.reviewFrom%>
                    </p>
                    <p> <span>Review:</span>
                        <%=review.content%>
                    </p>

                </div>
                <%}%>
                    <%}%>

    </div>
</div>